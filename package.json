{
  "name": "diat",
  "private": true,
  "scripts": {
    "bootstrap": "./node_modules/.bin/lerna bootstrap && ./node_modules/.bin/lerna link",
    "build": "cd packages/live-inspector && yarn build && cd ../diat && yarn build",
    "test": "cd packages/diat && yarn test",
    "ci": "cd packages/diat && yarn test:ci",
    "postinstall": "npm run bootstrap && npm run build"
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "lerna": "^3.20.2",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
